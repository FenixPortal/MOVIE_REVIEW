.panel.panel-default
  .panel-body
    .row
      .col-md-4
        =image_tag @movie.image
      .table-responsive
      %table.table
        %tbody
          %tr
            %td
              %b Title:
            %td=@movie.title
          %tr
            %td
              %b Description:
            %td=@movie.description
          %tr
            %td
              %b Movie length:
            %td=@movie.movie_length
          %tr
            %td
              %b Director:
            %td= @movie.director
          %tr
            %td
              %b Rating:
            %td=@movie.rating

    = link_to 'Edit', edit_movie_path(@movie)
    \|
    = link_to 'Back', movies_path
